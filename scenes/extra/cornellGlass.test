#Cornell Box
size 480 480
#size 2000 2000
integrator volumetricpathtracer
spp 20000
importancesampling brdf
nexteventestimation off
russianroulette on
camera 0 1 3 0 1 0 0 1 0 45
output cornellGlass.png
gamma 2.2

maxdepth 10

# define volume types
volumetype air 1  1  0 0 0  0 0 0
volumetype glass 0  1.5  5 5 5  0 0 0
defaultvolume air

maxverts 4
#planar face
vertex -1 +1 0
vertex -1 -1 0
vertex +1 -1 0
vertex +1 +1 0


ambient 0 0 0
specular 0 0 0
shininess 1000
emission 0 0 0
diffuse 0 0 0

quadLight -0.25 1.999 -0.25 0 0 0.5  0.5 0 0  30 26 21

#point 0 0.44 2 0.8 0.8 0.8

diffuse 0 0 0.8
#sphere 0 0.8 -1.5 0.1


pushTransform

#red
pushTransform
translate -1 1 0
rotate 0 1 0 90
scale 1 1 1
diffuse 0.8 0 0
tri 0 1 2
tri 0 2 3
popTransform

#green
pushTransform
translate 1 1 0
rotate 0 1 0 -90
scale 1 1 1
diffuse 0 0.8 0
tri 0 1 2
tri 0 2 3
popTransform

#back
pushTransform
scale 1 1 1
translate 0 1 -1
diffuse 0.8 0.8 0.8
tri 0 1 2
tri 0 2 3
popTransform

#top
pushTransform
translate 0 2 0
rotate 1 0 0 90
scale 1 1 1
diffuse 0.8 0.8 0.8
tri 0 1 2
tri 0 2 3
popTransform

#bottom
pushTransform
translate 0 0 0
rotate 1 0 0 -90
scale 1 1 1
diffuse 0.8 0.8 0.8
tri 0 1 2
tri 0 2 3
popTransform

pushTransform
brdf volumetric
volume glass

translate 0 1 0
roughness 0.01
sphere -0.4 0 0 0.3
roughness 0.2
sphere 0.4 0 0 0.3
popTransform

popTransform
