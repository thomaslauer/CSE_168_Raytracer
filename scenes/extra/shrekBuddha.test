size 1280 1280
#size 480 480
integrator pathtracer
spp 256
gamma 2.2
importancesampling brdf
nexteventestimation on
russianroulette on
camera  0 2 15  0 -2.5 2.5  0 1 0  30
output shrekBuddha.png

maxdepth -1

vertex -20 -4 -2
vertex -20 -4 20
vertex 20 -4 -2
vertex 20 -4 20

vertex -20 -4 -2
vertex -20 20 -2
vertex 20 -4 -2
vertex 20 20 -2


# default material settings
brdf phong
ambient 0 0 0
specular 0 0 0
shininess 30
emission 0 0 0
diffuse 1 1 1
roughness 1

# floor
tri 0 1 2
tri 3 2 1

# back wall
diffuse 0.8 0.1 0.1
tri 6 5 4
tri 5 6 7

brdf volumetric
ior 1.2


pushTransform
translate 0 -3.9 5

#specular 0 0.2 0
#diffuse 0.1 0.2 0
#roughness 0.7
#scale 4 4 4
#obj ../res/shrek.obj


diffuse 0 0.1 0.01
#specular 0.9 0.2 0.07
specular 0 0.2 0.07
roughness 0.6

scale 0.6 0.6 0.6
obj ../res/shrek_buddha.obj
popTransform

# overhead light
quadLight  10 50 25  0 -6 6  10 0 0  110 105 95
quadLight  -20 50 25  0 -6 6  10 0 0  10 15 25

