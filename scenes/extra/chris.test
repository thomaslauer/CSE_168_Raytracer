#size 1280 1280
size 480 480
integrator pathtracer
spp 256
gamma 2.2
importancesampling mis
nexteventestimation on
russianroulette on
camera  0 2 15  0 -2.5 2.5  0 1 0  30
output chris.png

maxdepth -1


maxverts 8

vertex -20 -4 -2
vertex -20 -4 20
vertex 20 -4 -2
vertex 20 -4 20

vertex -20 -4 -2
vertex -20 20 -2
vertex 20 -4 -2
vertex 20 20 -2


# default material settings
brdf phong
ambient 0 0 0
specular 0 0 0
shininess 30
emission 0 0 0
diffuse 1 1 1
roughness 1

# floor
tri 0 1 2
tri 3 2 1

# back wall
tri 6 5 4
tri 5 6 7

# sphere default material settings
brdf volumetric
ior 1.6

sphere 0 0 0 1

# overhead light
quadLight  10 50 25  0 -6 6  10 0 0  110 105 95
quadLight  -20 50 25  0 -6 6  10 0 0  10 15 25
